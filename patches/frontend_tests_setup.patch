+import { renderHook } from '@testing-library/react-hooks';
+import useAuthToken, { getAccessToken, getRefreshToken } from './useAuthToken';
+
+describe('useAuthToken', () => {
+  beforeEach(() => {
+    localStorage.clear();
+  });
+  
+  it('returns null if no token stored', () => {
+    const { result } = renderHook(() => useAuthToken());
+    expect(result.current.token).toBeNull();
+    expect(result.current.refreshToken).toBeNull();
+  });
+  
+  it('returns token from localStorage', () => {
+    localStorage.setItem('authToken', 'fake-access-token');
+    localStorage.setItem('refreshToken', 'fake-refresh-token');
+    
+    const { result } = renderHook(() => useAuthToken());
+    
+    expect(result.current.token).toBe('fake-access-token');
+    expect(result.current.refreshToken).toBe('fake-refresh-token');
+  });
+  
+  it('getAccessToken returns correct value', () => {
+    localStorage.setItem('authToken', 'test-token');
+    expect(getAccessToken()).toBe('test-token');
+  });
+  
+  it('getRefreshToken returns correct value', () => {
+    localStorage.setItem('refreshToken', 'test-refresh');
+    expect(getRefreshToken()).toBe('test-refresh');
+  });
+});

