+[mypy]
+python_version = 3.11
+warn_return_any = True
+warn_unused_configs = True
+disallow_untyped_defs = False  # Progressif: activer plus tard
+check_untyped_defs = True
+
+# Chemins
+mypy_path = .
+exclude = (venv|migrations|tests)
+
+# Plugins
+plugins = sqlalchemy.ext.mypy.plugin
+
+# Ignore imports manquants (libs sans stubs)
+ignore_missing_imports = True
+
+# Strict typing progressif
