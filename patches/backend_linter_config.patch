+# Ruff configuration pour backend ATMR
+# Documentation: https://docs.astral.sh/ruff/
+
+target-version = "py311"
+line-length = 120
+
+[lint]
+select = [
+    "E",   # pycodestyle errors
+    "W",   # pycodestyle warnings
+    "F",   # pyflakes
+    "I",   # isort
+    "N",   # pep8-naming
+    "UP",  # pyupgrade
+    "B",   # flake8-bugbear
+    "C4",  # flake8-comprehensions
+    "DTZ", # flake8-datetimez (timezone aware)
+    "T20", # flake8-print
+    "SIM", # flake8-simplify
+]
+
+ignore = [
+    "E501",   # Line too long (géré par formatter)
+    "B008",   # Function call in argument defaults (courant SQLAlchemy)
+    "N805",   # First argument should be self (validators ORM)
+    "UP006",  # Use type instead of Type (compat Python <3.9)
+    "UP007",  # Use X | Y for unions (compat Python <3.10)
+]
+
+[lint.per-file-ignores]
+"__init__.py" = ["F401"]  # Imports inutilisés OK dans __init__
+"migrations/**/*.py" = ["E501", "F401", "N999"]  # Alembic auto-generated
+"tests/**/*.py" = ["S101", "F401"]  # Assert OK dans tests
+
+[format]
+quote-style = "double"
+indent-style = "space"
+line-ending = "auto"
+
