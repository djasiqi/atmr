{
  "extends": "expo/tsconfig.base",
  "compilerOptions": {
    "baseUrl": ".",                     // Point de d√©part des imports
    "paths": {
      "@/*": ["./*"],                  // "@/services/api" = "./services/api.ts"
      "@types/*": ["app/types/*"]      // "@types/driver" = "app/types/driver.ts"
    },
    "strict": true
  },
  "include": [
    "**/*.ts",
    "**/*.tsx",
    ".expo/types/**/*.ts",
    "expo-env.d.ts"
  ]
}
