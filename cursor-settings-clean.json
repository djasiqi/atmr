{
  "files.exclude": {
    "**/.git": true,
    "**/.DS_Store": true,
    "**/node_modules": true,
    "**/venv": true,
    "**/__pycache__": true,
    "**/.pytest_cache": true,
    "**/.mypy_cache": true,
    "**/.ruff_cache": true,
    "**/htmlcov": true,
    "**/backend/uploads": true,
    "**/osrm/data": true,
    "**/Redis": true,
    "**/*.log": true,
    "**/session": true,
    "**/backend/data/ml": true,
    "**/backend/data/rl": true,
    "**/backend/temp_ml_registry": true,
    "**/backend/temp_rl_registry": true,
    "**/backend/temp_eval_registry": true,
    "**/backend/temp_symlink_registry": true,
    "**/*.db": true,
    "**/*.sqlite": true,
    "**/*.sqlite3": true,
    "**/devdb": true,
    "**/backend/instance": true
  },
  "search.exclude": {
    "**/node_modules": true,
    "**/venv": true,
    "**/__pycache__": true,
    "**/backend/uploads": true,
    "**/osrm/data": true,
    "**/Redis": true,
    "**/session": true,
    "**/*.log": true,
    "**/*.txt": true,
    "**/backend/data/ml": true,
    "**/backend/data/rl": true,
    "**/.venv": true,
    "**/htmlcov": true
  },
  "files.watcherExclude": {
    "**/.git/objects/**": true,
    "**/.git/subtree-cache/**": true,
    "**/node_modules/**": true,
    "**/venv/**": true,
    "**/__pycache__/**": true,
    "**/backend/uploads/**": true,
    "**/osrm/data/**": true,
    "**/Redis/**": true,
    "**/session/**": true,
    "**/*.log": true,
    "**/*.txt": true,
    "**/backend/data/ml/**": true,
    "**/backend/data/rl/**": true,
    "**/.pytest_cache/**": true,
    "**/.mypy_cache/**": true,
    "**/.ruff_cache/**": true
  },
  "search.followSymlinks": false,
  "search.smartCase": true,
  "search.useIgnoreFiles": true,
  "files.maxMemoryForLargeFilesMB": 4096,
  "cursor.chat.maxContextTokens": 16000,
  "editor.suggestSelection": "first",
  "editor.suggest.maxVisibleSuggestions": 10,
  "editor.suggest.localityBonus": true,
  "editor.inlineSuggest.enabled": true,
  "editor.inlineSuggest.showToolbar": "onHover",
  "editor.formatOnSave": true,
  "editor.formatOnPaste": false,
  "extensions.autoCheckUpdates": false,
  "extensions.autoUpdate": false,
  "python.analysis.indexing": true,
  "python.analysis.completeFunctionParens": true,
  "python.analysis.autoImportCompletions": true,
  "ruff.enable": true,
  "ruff.lint.enable": true,
  "terminal.integrated.scrollback": 5000,
  "terminal.integrated.fastScrollSensitivity": 5
}

