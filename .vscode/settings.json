{
  // --- Python ---
  "python.envFile": "${workspaceFolder}/backend/.env",
  "python.analysis.extraPaths": [
    "${workspaceFolder}/backend",
    "/usr/local/lib/python3.11/site-packages"
  ],
  "python.defaultInterpreterPath": "/usr/local/bin/python",
  "python.analysis.autoSearchPaths": true,
  "python.analysis.useLibraryCodeForTypes": true,
  "python.testing.unittestArgs": ["-v", "-s", "./backend", "-p", "*test.py"],
  "python.testing.unittestEnabled": true,
  "python.testing.pytestEnabled": false,
  "python.testing.cwd": "${workspaceFolder}/backend",
  "python.analysis.typeCheckingMode": "basic", // passe Ã  "strict" pour plus d'alertes
  "[python]": { "editor.defaultFormatter": "ms-python.python" },

  // --- JS/TS ---
  "editor.formatOnSave": true,
  "editor.codeActionsOnSave": {
    "source.fixAll": "explicit",
    "source.fixAll.eslint": "explicit"
  },
  "[javascript]": { "editor.defaultFormatter": "esbenp.prettier-vscode" },
  "[typescript]": { "editor.defaultFormatter": "esbenp.prettier-vscode" },
  "[javascriptreact]": { "editor.defaultFormatter": "esbenp.prettier-vscode" },
  "[typescriptreact]": { "editor.defaultFormatter": "esbenp.prettier-vscode" },

  "eslint.validate": [
    "javascript",
    "javascriptreact",
    "typescript",
    "typescriptreact",
    "json"
  ],
  "eslint.workingDirectories": [
    { "directory": "frontend", "changeProcessCWD": true },
    { "directory": "mobile/client-app", "changeProcessCWD": true },
    { "directory": "mobile/driver-app", "changeProcessCWD": true }
  ],

  // --- Confort / perfs ---
  "problems.decorations.enabled": true,
  "files.exclude": { "**/node_modules": true, "**/__pycache__": true },
  "search.exclude": {
    "**/node_modules": true,
    "**/__pycache__": true,
    "**/.venv": true,
    "**/build": true,
    "**/dist": true
  },

  "workbench.view.alwaysShowHeaderActions": true,
  
  // --- Java/Android ---
  "java.compile.nullAnalysis.mode": "automatic",
  "java.configuration.updateBuildConfiguration": "interactive",
  "java.import.exclusions": [
    "**/node_modules/**",
    "**/mobile/driver-app/node_modules/**",
    "**/mobile/client-app/node_modules/**"
  ],
  
  // --- Pyright ---
  "cursorpyright.analysis.autoSearchPaths": true,
  "cursorpyright.analysis.extraPaths": [
    "${workspaceFolder}/backend",
    "/usr/local/lib/python3.11/site-packages"
  ],
  "cursorpyright.analysis.typeCheckingMode": "basic",
  "cursorpyright.analysis.useLibraryCodeForTypes": true,

  // --- YAML / GitHub Actions ---
  "yaml.schemas": {
    "https://json.schemastore.org/github-workflow.json": ".github/workflows/*.yml"
  },
  "yaml.customTags": [
    "!reference sequence"
  ]
}
