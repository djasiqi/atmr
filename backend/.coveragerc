# Configuration coverage.py
[run]
source = .
omit =
    */tests/*
    */test_*
    */__pycache__/*
    */migrations/*
    */venv/*
    */env/*
    */node_modules/*
    */scripts/*
    */conftest.py
    */factories.py
    */.venv/*

[report]
precision = 2
show_missing = True
skip_covered = False
exclude_lines =
    pragma: no cover
    def __repr__
    raise AssertionError
    raise NotImplementedError
    if __name__ == .__main__.:
    if TYPE_CHECKING:
    @abstractmethod
    @abc.abstract

# ✅ 3.1: Seuils de couverture par module (optionnel)
# Ces seuils sont utilisés par le script check_coverage.py
# Modules critiques définis dans scripts/check_coverage.py (CRITICAL_MODULES)

[html]
directory = htmlcov

[xml]
output = coverage.xml

