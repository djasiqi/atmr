# Configuration coverage.py
[run]
source = .
omit =
    */tests/*
    */test_*
    */__pycache__/*
    */migrations/*
    */venv/*
    */env/*
    */node_modules/*
    */scripts/*
    */conftest.py
    */factories.py
    */.venv/*

[report]
precision = 2
show_missing = True
skip_covered = False
exclude_lines =
    pragma: no cover
    def __repr__
    raise AssertionError
    raise NotImplementedError
    if __name__ == .__main__.:
    if TYPE_CHECKING:
    @abstractmethod
    @abc.abstract

# ✅ 3.1: Seuils de couverture par module (optionnel)
# Ces seuils sont utilisés par le script check_coverage.py
# Modules critiques définis dans scripts/check_coverage.py (CRITICAL_MODULES)
#
# Seuils spécifiques par module (selon plan d'audit):
# - backend/services/unified_dispatch/* : ≥95%
#   (engine.py, solver.py, heuristics.py, autonomous_manager.py, queue.py, data.py, apply.py, settings.py)
# - backend/routes/auth.py : ≥95%
# - backend/services/osrm_client.py : ≥90%
# - backend/services/rl/dispatch_env.py : ≥85%
# - Autres modules critiques : ≥80% (seuil par défaut)
#
# Vérification automatique via: python scripts/check_coverage.py --coverage-xml coverage.xml

[html]
directory = htmlcov

[xml]
output = coverage.xml

