# --- Mode ---
FLASK_CONFIG=production
FLASK_RUN_HOST=0.0.0.0
FLASK_RUN_PORT=5000
FLASK_DEBUG=false

# --- Secrets ---
# IMPORTANT: Générez vos propres clés secrètes pour la production !
# Utilisez : python -c "import secrets; print(secrets.token_urlsafe(64))"
JWT_SECRET_KEY=your-jwt-secret-key-here
SECRET_KEY=your-secret-key-here
APP_ENCRYPTION_KEY_B64=your-encryption-key-here

# --- Base de données ---
# Pour SQLite (développement)
DATABASE_URL=sqlite:////app/production.db
# Pour PostgreSQL (production recommandée)
# DATABASE_URL=postgresql://user:password@postgres:5432/atmr

# --- Email ---
MAIL_SERVER=smtp.example.com
MAIL_PORT=465
MAIL_USE_TLS=false
MAIL_USE_SSL=true
MAIL_USERNAME=your-email@example.com
MAIL_PASSWORD=your-email-password
MAIL_DEFAULT_SENDER=your-email@example.com

# --- Frontend / CORS ---
FRONTEND_URL=http://localhost:3000
FRONTEND_ORIGINS_DEV=http://localhost:3000,http://127.0.0.1:3000
SOCKETIO_ASYNC_MODE=eventlet
SOCKETIO_CORS_ORIGINS=http://localhost:3000,http://127.0.0.1:3000

# --- Sentry (optionnel) ---
SENTRY_DSN=

# --- OSRM / géocodage ---
UD_OSRM_PROFILE=driving
UD_OSRM_TIMEOUT_SEC=5
UD_OSRM_MAX_SOURCES_PER_CALL=60
UD_OSRM_RATE_LIMIT_PER_SEC=8
UD_OSRM_MAX_RETRIES=2
UD_OSRM_RETRY_BACKOFF_MS=250
UD_MATRIX_CACHE_TTL_SEC=300
UD_MATRIX_GRID_ROUND=50
UD_MATRIX_AVG_SPEED_KMH=25
GEOCODER_PROVIDER=photon
PHOTON_BASE_URL=https://photon.komoot.io

# --- Realtime / Redis ---
REDIS_URL=redis://redis:6379/0
DRIVER_LOC_TTL_SEC=600
DRIVER_LOC_MATCH_WINDOW=5

# --- Celery Configuration ---
CELERY_BROKER_URL=redis://redis:6379/0
CELERY_RESULT_BACKEND=redis://redis:6379/0
CELERY_TIMEZONE=Europe/Zurich
DISPATCH_AUTORUN_INTERVAL_SEC=300
DISPATCH_AUTORUN_ENABLED=true
UD_OSRM_BASE_URL=http://osrm:5000
UD_OSRM_URL=http://osrm:5000