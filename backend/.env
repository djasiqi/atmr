# ============================================
# CONFIGURATION BACKEND - ATMR
# ============================================

# ===== ENVIRONNEMENT =====
FLASK_ENV=development
FLASK_CONFIG=development
FLASK_APP=app.py

# ===== SÃ‰CURITÃ‰ =====
# ClÃ© secrÃ¨te Flask (gÃ©nÃ©rer avec: python -c "import secrets; print(secrets.token_hex(32))")
SECRET_KEY=your-secret-key-here-change-in-production

# ClÃ© JWT (gÃ©nÃ©rer avec: python -c "import secrets; print(secrets.token_hex(32))")
JWT_SECRET_KEY=your-jwt-secret-key-here-change-in-production

# ===== BASE DE DONNÃ‰ES =====
DATABASE_URL=postgresql+psycopg://atmr:atmr@localhost:5432/atmr

# Pool de connexions
SQLALCHEMY_POOL_SIZE=10
SQLALCHEMY_MAX_OVERFLOW=20
SQLALCHEMY_POOL_TIMEOUT=30
SQLALCHEMY_POOL_RECYCLE=1800

# ===== REDIS & CELERY =====
REDIS_URL=redis://localhost:6379/0
CELERY_BROKER_URL=redis://localhost:6379/0
CELERY_RESULT_BACKEND=redis://localhost:6379/0
CELERY_TIMEZONE=Europe/Zurich

# ===== DISPATCH AUTOMATIQUE =====
DISPATCH_AUTORUN_ENABLED=true
DISPATCH_AUTORUN_INTERVAL_SEC=300
UD_OSRM_URL=http://localhost:5000

# ===== EMAIL (SMTP) =====
MAIL_SERVER=smtp.gmail.com
MAIL_PORT=587
MAIL_USE_TLS=true
MAIL_USERNAME=your-email@example.com
MAIL_PASSWORD=your-app-password-here
MAIL_DEFAULT_SENDER=noreply@atmr.ch

# ===== PDF GENERATION =====
# URL publique du backend (pour gÃ©nÃ©ration PDF)
PDF_BASE_URL=http://localhost:5000

# ===== UPLOADS =====
UPLOAD_FOLDER=uploads
MAX_CONTENT_LENGTH=16777216
UPLOADS_PUBLIC_BASE=/uploads

# ===== SENTRY (MONITORING) =====
# DSN Sentry (obtenir sur sentry.io)
SENTRY_DSN=

# ===== CORS =====
# Origines autorisÃ©es (sÃ©parÃ©es par des virgules)
CORS_ORIGINS=http://localhost:3000,http://localhost:3001

# ===== LOGGING =====
APP_LOG_LEVEL=INFO
MASK_PII_LOGS=true

# ===== SESSION =====
SESSION_COOKIE_SECURE=false
SESSION_COOKIE_HTTPONLY=true
SESSION_COOKIE_SAMESITE=Lax
REMEMBER_COOKIE_SECURE=false
REMEMBER_COOKIE_HTTPONLY=true
REMEMBER_COOKIE_SAMESITE=Lax

# ===== TIMEZONE =====
TZ=Europe/Zurich
